---
interface Props {
  title: string;
  label: string;
  secondaryLabel?: string;
}

const { title, label, secondaryLabel } = Astro.props;
---

<div class="flex items-center pb-2 border-b-1 border-white/20">
  <div class=" flex justify-center items-center w-9 h-9 rounded-lg bg-[#1c1c1c]">
    <slot />
  </div>
  <div class="flex flex-col pl-2">
    <p class="text-[#a8b1ff] text-xs font-bold">{title}</p>
    <p class="text-sm font-bold">{label}</p>
    <p class="text-sm font-bold">{secondaryLabel}</p>
  </div>
</div>