---
interface Props {
  label: string;
  color: string;
  borderColor: string;
}

const { label, color, borderColor } = Astro.props;
---
<p class=`flex items-center justify-center gap-1.5 px-4 py-3 rounded-sm bg-gray-700 ${color}  border ${borderColor}`>
  <slot />
  <span class="mt-0.5">
    {label}
  </span>
</p>